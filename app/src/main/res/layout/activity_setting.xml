<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_marginTop="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFB2B0F7"
        android:paddingBottom="53dp"
        android:elevation="4dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffdedffe"
                android:paddingVertical="9dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/reply_arrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="18dp"
                    android:src="@drawable/reply_arrow"

                    />

                <RelativeLayout
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginHorizontal="27dp"
                    android:background="@drawable/ellipse_2"
                    >
                    <ImageView
                        android:id="@+id/avarta"
                        android:layout_width="132dp"
                        android:layout_height="132dp"
                        android:src="@drawable/workflow"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text="Judy"
                        android:textColor="#B2B0F7"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="17dp"
                android:layout_marginHorizontal="26dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/account"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Account"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <ImageView
                    android:id="@+id/account_info"
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@drawable/layer_2"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80000000"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="27dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/preferences"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Preferences"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <ImageView
                    android:id="@+id/preferences_info"
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/layer_2"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80000000"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/setting"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Settings"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <ImageView
                    android:id="@+id/setting_info"
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@drawable/layer_2"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80000000"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reqcyjl4jqrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="23dp"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r3amwv6jhs44"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/language"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/rjoij1t2dp8d"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Language"
                    />
                <LinearLayout
                    android:id="@+id/rwdijoo8hloe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <ImageView
                    android:id="@+id/language_info"
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@drawable/layer_2"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rpppjhkivkg"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80000000"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ribiz9nd8ykp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/r487r30j4jxo"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="13dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/help" />
                <TextView
                    android:id="@+id/rqldl8xts97a"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Help"
                    />
                <LinearLayout
                    android:id="@+id/r5xnvmji4y0o"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <ImageView
                    android:id="@+id/help"
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@drawable/layer_2"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rh32qd8n4rk4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80000000"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl3t8aikccvj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="28dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2yfgzrtagtd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/logout"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/rufukmc0c57"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Logout"
                    />
                <LinearLayout
                    android:id="@+id/ry4xalq0pzs9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@drawable/layer_2"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

