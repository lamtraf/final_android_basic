<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:background="#E8B0B0"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="34dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/button_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        android:src="@drawable/reply_arrow"
                        android:scaleType="fitXY"
                        />
                    <Space
                        android:layout_width="100dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/title"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="Detail"
                        />
                    <ImageView
                        android:id="@+id/button_remove"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        android:src="@drawable/baseline_delete_forever_24"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_shape"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Task name"
                        />

                    <EditText
                        android:id="@+id/task_name"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="enter your task name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_shape"
                        android:paddingVertical="11dp"
                        android:paddingHorizontal="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="#757575"
                            android:textSize="10sp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Income or expenses"
                            />
                        <Spinner
                            android:id="@+id/spinner_state"
                            android:layout_width="wrap_content"
                            android:dropDownWidth="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_shape"
                        android:paddingVertical="11dp"
                        android:paddingHorizontal="16dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="#757575"
                            android:textSize="10sp"
                            android:layout_marginBottom="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Account"
                            />
                        <Spinner
                            android:id="@+id/spinner_type"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:dropDownWidth="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_shape"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Money"
                        />
                    <EditText
                        android:id="@+id/task_money"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="enter your money" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_shape"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Detail"
                        />
                    <EditText
                        android:id="@+id/task_detail"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="enter your detail" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@color/black"
                    android:paddingVertical="15dp"
                    android:layout_marginHorizontal="24dp">
                    <TextView

                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="submit"
                        />

                </LinearLayout>
            </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>