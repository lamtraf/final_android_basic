<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When Button is not enabled -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
        </shape>
    </item>
    <!-- When Button is in pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#b5cdd9" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#b5cdd9" />
        </shape>
    </item>
    <!-- When Button is in selected state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#fabcff" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#fabcff" />
        </shape>
    </item>
    <!-- Default Background Color -->
    <item>
        <shape>
            <solid android:color="#b5cdd9" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#8d8a9c" />
        </shape>
    </item>
</selector>
